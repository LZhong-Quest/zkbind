<window apply="test.ZKBindSave1Composer" self="@form(id='fx', vm.p1, save=vm.p1 before 'myCommand')">
	<custom-attributes composerName="vm"/>
<grid width="500px" >
	<columns>
		<column label="First Name"></column>
		<column label="Last Name"></column>
		<column label="Full Name"></column>
	</columns>
	<rows>
		<row id="row1">
			<textbox value="@bind(fx.firstName, converter='firstName'))"/>
			<textbox value="@bind(fx.lastName, converter='lastName'))"/>
			<label value="@bind(fx, converter='fullName')"/>
		</row>
	</rows>
</grid>
<button label="Save" onClick="@bind('myCommand')"/>
<button label="Dump" onClick="binder.getTracker().dump()"/>
</window>