	<component>
		<component-name>combobox</component-name>
		<extends>combobox</extends>
		<annotation>
			<annotation-name>$SYSBIND$</annotation-name>
			<attribute>
				<attribute-name>$R$</attribute-name>
				<attribute-value>itemRenderer=org.zkoss.zkbind.impl.BindComboitemRenderer</attribute-value>
			</attribute>
		</annotation>
		
		<annotation>
			<annotation-name>$SYSBIND$</annotation-name>
			<property-name>model</property-name>
			<attribute>
				<attribute-name>$C$</attribute-name>
				<attribute-value>org.zkoss.zkbind.converter.sys.ListModelConverter</attribute-value>
			</attribute>
		</annotation>
		<annotation>
			<annotation-name>$SYSBIND$</annotation-name>
			<property-name>selectedItem</property-name>
			<attribute>
				<attribute-name>$SE$</attribute-name>
				<!-- bug #2966241, since 5.0, combobox changes the sequence to fire onChange 
				then onSelect event when end user select an item from the drop down list(In 3.x,
				it used to fire onSelect then onChange). This could cause the currently selected 
				bean to be modified in onChange event if we still trigger binding of the 
				selectedItem with onSelect event. Thus we change this to be triggered when "onChange" event
				 -->
				<attribute-value>onChange</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>$LE$</attribute-name>
				<attribute-value>onAfterRender</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>$A$</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>$C$</attribute-name>
				<attribute-value>org.zkoss.zkbind.converter.sys.SelectedComboitemConverter</attribute-value>
			</attribute>
		</annotation>
		<annotation>
			<annotation-name>$SYSBIND$</annotation-name>
			<property-name>value</property-name>
			<attribute>
				<attribute-name>$A$</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>$SE$</attribute-name>
				<attribute-value>onChange</attribute-value>
			</attribute>
		</annotation>
		<annotation>
			<annotation-name>$SYSBIND$</annotation-name>
			<property-name>selectedIndex</property-name>
			<attribute>
				<attribute-name>$SE$</attribute-name>
				<attribute-value>onSelect</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>$LE$</attribute-name>
				<attribute-value>onAfterRender</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>$A$</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
		</annotation>
	</component>
