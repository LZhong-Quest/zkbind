<window apply="test.ZKBindSave1Composer">
	<custom-attributes composerName="vm"/>
<grid width="500px" >
	<columns>
		<column label="First Name"></column>
		<column label="Last Name"></column>
		<column label="Full Name"></column>
	</columns>
	<rows>
		<row id="row1">
			<textbox value="@bind(vm.p1.firstName, save=vm.p1.firstName before 'myCommand')"/>
			<textbox value="@bind(vm.p1.lastName, save=vm.p1.lastName before 'myCommand')"/>
			<label value="@bind(vm.p1.fullName)"/>
		</row>
	</rows>
</grid>
<button label="Save" onClick="@bind('myCommand')"/>
<button label="Dump" onClick="binder.getTracker().dump()"/>
</window>